---
import { cn } from '@/utils'

const { class: className, title } = Astro.props
---

<section class={cn(className, 'flex flex-col gap-y-5 md:flex-row md:gap-y-0 animate-fade-in')}>
	<div class='md:w-1/3'>
		<h2 class='text-xl font-bold tracking-tight text-foreground/90 flex items-center gap-2'>
			<span class='w-1 h-6 bg-gradient-to-b from-purple-500 to-pink-500 rounded-full'></span>
			{title}
		</h2>
	</div>
	<div class='flex flex-col gap-y-3 md:w-2/3'>
		<slot />
	</div>
</section>
