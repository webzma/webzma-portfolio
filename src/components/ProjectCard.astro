---
import { Image } from 'astro:assets'
import type { ImageMetadata } from 'astro'
import { cn } from '@/utils'

const {
	as: Tag = 'a',
	class: className,
	href,
	heading,
	subheading,
	imagePath,
	altText
} = Astro.props
---

<Tag
	class={cn(
		className,
		'flex flex-col gap-y-3 rounded-2xl border border-border bg-primary-foreground ',
		href && 'transition-all hover:border-foreground/25 hover:shadow-sm'
	)}
	href={href}
>
	<Image
		src={imagePath}
		alt={altText}
		class='h-48 w-full rounded-2xl rounded-bl-none rounded-br-none'
		loading='eager'
		height={500}
		width={500}
		quality={100}
	/>
	<div class='flex flex-col gap-y-0.5 px-5 py-4'>
		<h1 class='text-lg font-medium'>{heading}</h1>
		<h2 class='text-muted-foreground'>{subheading}</h2>
	</div>
	<slot />
</Tag>
