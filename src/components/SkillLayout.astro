---
import Button from './Button.astro'
const { title, skills } = Astro.props
---

<div class='flex flex-col gap-y-3 md:flex-row md:gap-x-6 md:gap-y-0'>
	<h3 class='w-1/5 font-semibold text-foreground/80'>{title}</h3>
	<div class='flex w-4/5 flex-row flex-wrap gap-3'>
		{skills.map((skill: string[]) => <Button as='button' title={skill} style='pill' />)}
	</div>
</div>
