---
import { Image } from 'astro:assets'
import type { ImageMetadata } from 'astro'
import { cn } from '@/utils'

const {
	as: Tag = 'div',
	class: className,
	href,
	heading,
	subheading,
	date,
	imagePath,
	altText,
	imageClass,
	courseImagePath,
	course
} = Astro.props
const images = import.meta.glob<{ default: ImageMetadata }>('/src/assets/*.{jpeg,jpg,png,gif}')

if (imagePath) {
	if (!images[imagePath])
		throw new Error(`"${imagePath}" does not exist in glob: "src/assets/*.{jpeg,jpg,png,gif}"`)
}
---

<Tag
	class={cn(
		className,
		'group relative rounded-2xl border border-border bg-primary-foreground px-5 py-4 hover-lift card-shine',
		href && 'cursor-pointer hover:border-purple-500/30 hover:shadow-lg hover:shadow-purple-500/5'
	)}
	href={href}
	target='_blank'
>
	{
		imagePath === '/src/assets/seriesly.png' && (
			<Image
				src={images[imagePath]()}
				alt={altText}
				class={cn('mb-3 md:absolute md:mb-0', imageClass)}
				loading='eager'
			/>
		)
	}
	<div class={cn('flex gap-y-1.5', course && 'flex-col md:flex-row', !course && 'flex-col')}>
		{
			course && (
				<div class='mr-4'>
					<img src={courseImagePath} alt='Course' class='size-12 md:-left-16' />
				</div>
			)
		}
		<div class='flex flex-col gap-y-1'>
			<h1 class='text-lg font-semibold group-hover:text-purple-600 dark:group-hover:text-purple-400 transition-colors'>{heading}</h1>
			<h2 class='text-base text-muted-foreground'>{subheading}</h2>
			<h2 class='text-sm text-muted-foreground/80'>{date}</h2>
		</div>
		<slot />
	</div>
</Tag>
